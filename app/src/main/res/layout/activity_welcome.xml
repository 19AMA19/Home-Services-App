<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Welcome" >

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="13dp"
        android:layout_marginTop="15dp" >

        <ImageView
            android:id="@+id/banner_img"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="fitCenter"
            android:src="@drawable/imagelogoo"
            android:alpha="0.2"
            android:contentDescription="image" />

        <TextView
            android:layout_marginTop="35dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#0E82D2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Home-Service App"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#0E82D2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Home Services App"/>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="13dp"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/userName"
            android:paddingBottom="30dp"
            android:paddingTop="10dp"
            android:textColorHint="#03195E"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Username"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="13dp"
        android:layout_marginTop="10dp" >

        <EditText
            android:paddingBottom="30dp"
            android:id="@+id/passWord"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"
            android:layout_width="280dp"
            android:textColorHint="#03195E"
            android:layout_height="wrap_content"
            android:hint="Password"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#0E82D2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select User Type"/>

        <RadioGroup
            android:id="@+id/accountsG"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/admin"
                android:text="Admin"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/user"
                android:text="User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/client"
                android:text="Client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:text="Login"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff" />

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="center"
            android:id="@+id/userSignUp"
            android:padding="10dp"
            android:background="@drawable/background"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User-Register"
            android:textColor="#ffffff" />
        <Button
            android:layout_gravity="center"
            android:id="@+id/clientSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:text="Client-Register"
            android:padding="10dp"
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>

